<Window x:Class="FreelanceBookkeeper.Views.ExpenseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gastos" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Margin="10">
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox Name="MonthGroupComboBox" Width="120" SelectionChanged="MonthGroupComboBox_SelectionChanged"/>
                <ComboBox Name="YearComboBox" Width="80" SelectionChanged="YearComboBox_SelectionChanged"/>
            </StackPanel>
                <Button Content="Guardar" Width="100" Height="25" Click="SaveButton_Click" HorizontalAlignment="Left"/>
            <StackPanel>
                <DataGrid x:Name="ExpenseDataGrid"
                  ItemsSource="{Binding Expenses}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"> 
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nom" Binding="{Binding SupplierName}" />
                        <DataGridTextColumn Header="Concepte" Binding="{Binding Description}" />
                        <DataGridTextColumn Header="DNI/NIE" Binding="{Binding SupplierId}" />
                        <DataGridTextColumn Header="Data" Binding="{Binding ExpenseDate}" />
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount}" />
                        <DataGridTemplateColumn Header="Acciones">
                        <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Borrar"
                                        Click="DeleteButton_Click" 
                                        Tag="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
