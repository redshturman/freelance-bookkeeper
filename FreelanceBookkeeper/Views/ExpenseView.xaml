<Window x:Class="FreelanceBookkeeper.Views.ExpenseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Despeses" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Margin="10">
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="MonthGroupComboBox"
                      Width="160"
                      ItemsSource="{Binding MonthGroups}"
                      DisplayMemberPath="Display"
                      SelectedIndex="-1"
                      SelectionChanged="MonthGroupComboBox_SelectionChanged"/>
                <ComboBox
                    x:Name="YearComboBox"
                    Width="120"
                    ItemsSource="{Binding Years}"
                    SelectionChanged="YearComboBox_SelectionChanged"
                    SelectedIndex="-1"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Guardar" Width="100" Height="25" Click="SaveButton_Click" HorizontalAlignment="Left" Margin="0,0,10,0"/>
                <Button Content="Exportar a Excel" Width="120" Height="25" Click="ExportButton_Click" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel>
                <DataGrid x:Name="ExpenseDataGrid"
                          ItemsSource="{Binding Expenses}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True"
                          CanUserDeleteRows="True"
                          CanUserSortColumns="True"> 
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nom" Binding="{Binding SupplierName}" />
                        <DataGridTextColumn Header="Concepte" Binding="{Binding Description}" />
                        <DataGridTextColumn Header="DNI/NIE" Binding="{Binding SupplierId}" />
                        <DataGridTemplateColumn Header="Data" SortMemberPath="ExpenseDate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ExpenseDate, StringFormat=dd/MM/yyyy}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding ExpenseDate}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat={}{0:N2}}" />
                        <DataGridTextColumn Header="Base Imponible" Binding="{Binding BaseAmount, StringFormat={}{0:N2}, Mode=OneWay}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Import IVA (21%)" Binding="{Binding TaxAmount, StringFormat={}{0:N2}, Mode=OneWay}" IsReadOnly="True" />
                        <DataGridTemplateColumn Header="Accions">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Borrar"
                                        Click="DeleteButton_Click" 
                                        Tag="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
