<Window x:Class="FreelanceBookkeeper.Views.CustomerTransactionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clients" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Margin="10">
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="MonthGroupComboBox"
                      Width="160"
                      ItemsSource="{Binding MonthGroups}"
                      DisplayMemberPath="Display"
                      SelectedIndex="-1"
                      SelectionChanged="MonthGroupComboBox_SelectionChanged"/>
                <ComboBox
                    x:Name="YearComboBox"
                    Width="120"
                    ItemsSource="{Binding Years}"
                    SelectionChanged="YearComboBox_SelectionChanged"
                    SelectedIndex="-1"/>
            </StackPanel>
            <Button Content="Guardar" Width="100" Height="25" Click="SaveButton_Click" HorizontalAlignment="Left"/>
            <StackPanel>
                
            </StackPanel>
            <DataGrid x:Name="CustomerTransactionDataGrid" 
                      ItemsSource="{Binding CustomerTransactions}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="True"
                      CanUserDeleteRows="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nº Factura" Binding="{Binding InvoiceNumber}" />
                    <DataGridTextColumn Header="Nom" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Adreça" Binding="{Binding Address}" />
                    <DataGridTextColumn Header="Telèfon" Binding="{Binding PhoneNumber}" />
                    <DataGridTextColumn Header="DNI/NIE" Binding="{Binding Identification}" />
                    <DataGridTemplateColumn Header="Data">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding InvoiceDate, StringFormat=dd/MM/yyyy}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding InvoiceDate}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount}" />
                    <DataGridTemplateColumn Header="Acciones">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Borrar"
                                        Click="DeleteButton_Click" 
                                        Tag="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
