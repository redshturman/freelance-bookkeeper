<Window x:Class="FreelanceBookkeeper.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Mesos a mostrar:" Margin="0,0,0,10"/>
        <TextBox Name="MonthsTextBox" Width="50"/>
        <Button Content="Guardar" Width="100" Margin="0,20,0,0" Click="Save_Click"/>
    </StackPanel>
</Window>
